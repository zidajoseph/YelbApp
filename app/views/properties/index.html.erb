<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Properties</h1>
    <%= link_to 'New property', new_property_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div
  data-controller="geolocation"
  class="container mx-auto py-16"
  data-latitude="<%= current_user&.profile&.latitude %>"
  data-longitude="<%= current_user&.profile&.longitude %>"
  >
    <div id="properties" class="min-w-full">
      <ul role="list" class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-4 sm:gap-x-6 lg:grid-cols-5 xl:gap-x-8">
        <%= render @properties %>
      </ul>
    </div>
  </div>

</div>
